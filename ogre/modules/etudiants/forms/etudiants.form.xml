<?xml version="1.0" encoding="utf-8"?>
<form xmlns="http://jelix.org/ns/forms/1.1">


<input ref="num_etudiant" required="true" >
	<label>Numero etudiant</label>
</input>

<input ref="nom" required="true" maxlength="50">
	<label>Nom</label>
</input>

<input ref="prenom" required="true" maxlength="50">
	<label>Prenom</label>
</input>

<date ref="date_naissance" datepicker="birthday" >
	<label>Date de naissance</label>
    <help>Ann√©e-Mois-Jour</help>
</date>

<checkboxes ref="formations">
	<label>Formation Disponible</label>
	<datasource dao="formations~formation" labelproperty="code_formation,libelle" labelseparator=" : " valueproperty="id_formation" method="findAll"/>
</checkboxes>

<submit ref="_submit">
	<label>Ok</label>
</submit>
</form>
